<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AWMApplication" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/app_green_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_statusbar_white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <!--        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->


    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_light_color</item>

    </style>


    <style name="progressBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_green_color</item>
        <item name="colorPrimaryDark">@color/app_green_color</item>
        <item name="colorAccent">@color/app_progressbar_color</item>
        <item name="android:progressTint">#DFDFDF</item>
        <item name="android:progressBackgroundTint">#616161</item>

    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Theme.AWMApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AWMApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AWMApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">-->
    <!--        <item name="spinBars">false</item>-->
    <!--        <item name="homeAsUpIndicator">@drawable/ic_menu_camera</item>-->
    <!--        <item name="color">@android:color/black</item>-->
    <!--    </style>-->


    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/app_green_color</item>

    </style>

</resources>